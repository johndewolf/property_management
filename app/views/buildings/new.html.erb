<h2>New Building:</h2>
<% if @building.errors.any? %>
  <ul>
    <% @building.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= simple_form_for @building do |f| %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state, collection: Building.us_states %>
  <%= f.input :postal_code %>
  <%= f.input :description %>
  <%= f.association :owner, label_method: :owner_name, value_method: :id %>
  <%= f.button :submit %>
<% end %>

